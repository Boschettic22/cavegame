<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/wizColor"
        android:orientation="vertical"
            tools:context=".activity.PlantActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/plantImage"
                android:layout_width="409dp"
                android:layout_height="264dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="451dp"
                android:contentDescription="@string/plantText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/plantimg" />

            <TextView
                android:id="@+id/plantIntro"
                android:layout_width="349dp"
                android:layout_height="58dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="308dp"
                android:autoSizeMinTextSize="18dp"
                android:text="@string/plantIntro"
                android:textIsSelectable="false"

                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/winButton"
                android:layout_width="169dp"
                android:layout_height="97dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="464dp"


                android:text="Fight Him"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>

